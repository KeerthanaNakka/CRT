import java.util.*;
class Median
{
	static int findMedian(int a[], int b[],int n)
	{
		if(n%2!=0)
		{
			return (a[n/2]+b[n/2])/2;
		}
		else
		{
			return (((a[n/2]+a[(n-1)/2])/2)+(b[n/2]+b[(n-1)/2])/2)/2;
		}
	}
	public static void main(String args[])
	{
		int i;
		Scanner s=new Scanner(System.in);
		int n=s.nextInt();
		int[] a=new int[n];
		int[] b=new int[n];
		for(i=0;i<n;i++)
			a[i]=s.nextInt();
		for(i=0;i<n;i++)
			b[i]=s.nextInt();
		System.out.print(findMedian(a,b,n));
	}
}
